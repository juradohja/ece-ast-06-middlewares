<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/head.ejs %>
    <title>Hello!</title>
</head>
<body class="container">
<div class="col-md-6 col-md-offset-3">
    <% if (!user) { %>
        <p>Welcome! Please <a href="/login">log in</a>.</p>
    <% } else { %>
        <p>Hello, <%= user.username %>. View your <a href="/profile">profile</a>.</p>
    <% } %>
    <button class="btn btn-success" id="show-metrics">
        Bring the metrics
    </button>
    <div id="metrics"></div>
</div>
</body>
<script>
    $('#show-metrics').click(() => {
       // e.preventDefault();
        console.log("query before");
    $.getJSON("/metrics", {}, (data) => {
        console.log("query ");
        const content = data.map(d => {
            return 'timestamp: '+d.timestamp+', value: '+d.value+'<br>';
    })
    $('#metrics').append(content.join("\n"));
    });
    })
</script>
</html>